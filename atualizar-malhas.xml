name: Atualizar malhas.json a partir de updates

on:
  push:
    paths:
      - "updates/*.json"
      - "scripts/update_status.py"
  workflow_dispatch:

permissions:
  contents: write

jobs:
  update:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Detect last update file
        id: detect
        run: |
          FILE=$(ls -1t updates/*.json | head -n 1)
          echo "file=$FILE" >> $GITHUB_OUTPUT
          echo "Using $FILE"

      - name: Run updater
        run: |
          python scripts/update_status.py "${{ steps.detect.outputs.file }}"

      - name: Commit and push changes
        run: |
          git config user.name "malhas-bot"
          git config user.email "malhas-bot@users.noreply.github.com"

          if git diff --quiet; then
            echo "No changes to commit."
            exit 0
          fi

          git add malhas.json
          git commit -m "Atualiza malhas.json via update"
          git push
